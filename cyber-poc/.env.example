# Environment Configuration Example
# Copy this file to .env and customize for your environment

# =========================================
# Server Configuration
# =========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# =========================================
# Detection Engine Settings
# =========================================
DETECTION_THRESHOLD=0.5
LOG_LEVEL=INFO
LOG_FILE=logs/requests.jl

# =========================================
# Dataset Generation
# =========================================
NUM_BENIGN=700000
NUM_MALICIOUS=300000
CHUNK_SIZE=10000
AUGMENT=5
BOT_IP_RATIO=0.1
START_DATE=2025-01-01
END_DATE=2025-10-29

# =========================================
# Reconnaissance Settings
# =========================================
# Whitelist: Comma-separated list of authorized targets
WHITELIST=localhost,127.0.0.1

# Target for reconnaissance (must be in whitelist)
TARGET=http://localhost:8000

# Nmap settings
NMAP_PORTS=1-1000
NMAP_SCAN_TYPE=syn

# SQLMap settings
SQLMAP_LEVEL=1
SQLMAP_RISK=1

# =========================================
# Security Settings
# =========================================
# JWT Secret (change in production!)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =========================================
# Database Settings (Future)
# =========================================
# Uncomment when you add database support
# DATABASE_URL=postgresql://user:password@localhost:5432/cyberpoc
# DATABASE_POOL_SIZE=10

# =========================================
# ML Model Settings (Future)
# =========================================
# MODEL_PATH=ml/models/xgboost_detector.json
# MODEL_THRESHOLD=0.7
# ENABLE_ML=false

# =========================================
# CORS Settings
# =========================================
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# =========================================
# Rate Limiting (Future)
# =========================================
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_BURST=10
